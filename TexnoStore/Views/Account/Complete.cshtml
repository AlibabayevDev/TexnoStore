@using TexnoStore.Models.Users

@model UserViewModel

<html>
<head>
    <link rel="stylesheet" href="~/css/login.css" >    
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airport</title>
    <link rel="stylesheet" href="~/css/style1.css">
    <link rel="stylesheet" href="~/css/login.css" >    

</head>
<body>
    <div class="body">
	<div class="row">
    <div class="col-md-6 mx-auto p-0">
        <div class="card">
            <div class="login-box">
                <div class="login-snip"> <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"></label> <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
                    <div class="login-space">
                        <form class="login" asp-controller="Account" asp-action="Complete" method="post">
                            <div class="group"> <label for="user" class="label">Confirm Code</label> <br />
                                <input type="text" class="input" asp-for="@Model.ConfirmPassword" placeholder="Enter your username">
                                @Html.ValidationMessageFor(model => model.user.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="group"> <input type="submit" class="button" value="Confirm"> </div>
                            <div class="hr">@ViewBag.Message</div>
                            <div class="foot"> <a asp-controller="Account" asp-action="RepeatSend">you didn't receive the code?</a> </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>
</html>

