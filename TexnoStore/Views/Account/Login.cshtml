@using TexnoStore.Models.Users

@model UserViewModel

@{
    Layout = null;
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store</title>
    <link rel="stylesheet" href="~/css/style1.css">
    <link rel="stylesheet" href="~/css/login.css" >    
</head>
<body>
    <div class="body">
	<div class="row">
    <div class="col-md-6 mx-auto p-0">
        <div class="card">
            <div class="login-box">
                <div class="login-snip"> <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label> <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                    <div class="login-space">


                        <form class="login" asp-controller="Account" asp-action="Login" method="post">
                            <div class="group"> <label for="user" class="label">Username</label> <br />
                                <input type="text" class="input" asp-for="@Model.user.Email" placeholder="Enter your Email">
				                    <span asp-validation-for="@Model.user.Email" class="text-danger"></span>
                            </div>
                            <div class="group"> 
                                <label for="pass" class="label">Password</label> <br />
                                <input type="password" class="input" asp-for="@Model.user.PasswordHash" data-type="password" placeholder="Create your password">
				                    <span asp-validation-for="@Model.user.PasswordHash" class="text-danger"></span>
                            </div>
                            <div class="group"> <input type="submit" class="button" value="Sign In"> </div>
                            <div class="hr">@ViewBag.Message</div>
                            <div class="foot"> <a href="">Forgot Password?</a> </div>
                        </form>



                        <form class="sign-up-form" asp-controller="Account" asp-action="Regist" method="post" >
                            <div class="group">
                                <label for="user" class="label">Username</label><br />
                                <input id="user" type="text" class="input" asp-for="@Model.loginModel.Email" placeholder="Create your Username">
				                    <span asp-validation-for="loginModel.Email" class="text-danger"></span>
                            </div>
                            <div class="group"> 
                                <label for="pass" class="label">Password</label> <br />
                                <input id="pass" type="password" class="input" asp-for="@Model.loginModel.Password" data-type="password" placeholder="Create your password">
				                    <span asp-validation-for="loginModel.Password" class="text-danger"></span>
                            </div>
                            <div class="group"> <input type="submit"  class="button" value="Sign Up"> </div>
                            <div class="hr">@ViewBag.Message</div>
                            <div class="foot"> <label for="tab-1">Already Member?</label> </div>           
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>
</html>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
