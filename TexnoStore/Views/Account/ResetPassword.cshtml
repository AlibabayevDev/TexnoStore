<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/ForgotPassword.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
<div class="container" id="container">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="New password"/>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password"/>
            </div>
            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />
            <button class="btn btn-primary" type="submit">Change password</button>
        </form>
</div>

</body>

