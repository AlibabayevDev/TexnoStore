@using TexnoStore.Models.Laptops
@using TexnoStore.Models
@using TexnoStore.Models.Phones
@model BaseModel
<header>
			<div id="top-header">
				<div class="container">
					<ul class="header-links pull-left">
						<li><a href="#"><i class="fa fa-phone"></i> +021-95-51-84</a></li>
						<li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
						<li><a href="#"><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</a></li>
					</ul>

					<ul class="header-links pull-right">
						<li><a href="#"><i class="fa fa-dollar"></i> USD</a></li>
						<li><a class="fa fa-user-o" asp-action="Index" asp-controller="Account">@User.Identity?.Name</a></li>
						<li><a href="/Account/Index"><i class="fa fa-user-o"></i> My Account</a></li>
					</ul>
				</div>
			</div>
			<div id="header">
				<div class="container">
					<div class="row">
						<div class="col-md-3">
							<div class="header-logo">
								<a href="/Home/Index" class="logo">
									<img src="~/img/logo.png" alt="">
								</a>
							</div>
						</div>
						<div class="col-md-6">
							<div class="header-search">
								<form asp-action="Index" asp-controller="AllProduct">
									<select class="input-select" asp-for="CategoryId">
										<option value="0">All Categories</option>
										<option value="1">Laptop</option>
										<option value="2">SmartPhone</option>
									</select>
									<input asp-for="Name" class="input" placeholder="Search here">
									<button type="submit" class="search-btn">Search</button>
								</form>
							</div>
						</div>
						<div class="col-md-3 clearfix">
							<div class="header-ctn">
								<!-- Wishlist -->
								<div>
									<a href="#">
										<i class="fa fa-heart-o"></i>
										<span>Your Wishlist</span>
										<div class="qty">2</div>
									</a>
								</div>
								<!-- /Wishlist -->

								<!-- Cart -->
								<div class="dropdown">
									<a name="click" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true"  onclick="ShopCartModal()">
											<i class="fa fa-shopping-cart"></i>
											<span>Your Cart</span>
											<div class="qty" id="ShopCount">0</div>
									</a>
																		
									<div class="cart-dropdown" id="shopCart" >

									</div>
								</div>
								<!-- /Cart -->

								<!-- Menu Toogle -->
								<div class="menu-toggle">
									<a href="#">
										<i class="fa fa-bars"></i>
										<span>Menu</span>
									</a>
								</div>
								<!-- /Menu Toogle -->
							</div>
						</div>
						<!-- /ACCOUNT -->
					</div>
					<!-- row -->
				</div>
				<!-- container -->
			</div>
			<!-- /MAIN HEADER -->
		</header>

		<script>
			function ShopCartModal() {
				$.ajax({
					url: "/ShopCart/ShopCartList",
					success: function (data) {
						$('#shopCart').html(data);
					},
					error: function (error) {
						console.log(error);
					}
				});
			}
			$.ajax({
				url: "/ShopCart/ShopCartCount",
				success: function (data) {
					$('#ShopCount').text(data);
				},
				error: function (error) {
					console.log(error);
				}
			});

		</script>