	<script>
		$.ajax({
				url: "/ShopCart/ShopCartCount",
				success: function (data) {
					$('#ShopCount').text(data);
				},
				error: function (error) {
					console.log(error);
				}
		});

		$.ajax({
				url: "/Account/IsAuthenticated",
				success: function (data) {
					if(data===true)
					{
						$('#login').text('My Account');
					}
					else
					{
						$('#login').html('<a href="/Account/Index">Sign In</a>');
					}
				},
				error: function (error) {
					console.log(error);
				}
			});
